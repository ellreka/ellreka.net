{
  "extends": "@ellreka/configs/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "decls.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
